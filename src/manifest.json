{
    "name": "Chrome-Auto-scriptor",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "js": ["js/main.js"],
            "matches": ["https://sports.naver.com/*"],
            "run_at": "document_end"
        }
    ],

    "background": {
        "scripts": [
            "js/init.js"
        ],
        "persistent": true
    },
    "browser_action": {},
    "options_ui": {
        "page": "html/option.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage"
    ]
}